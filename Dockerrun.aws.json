{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "daisenthal/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "daisenthal/multi-server",
            "hostname": "api",
            "essential": false
        },

        {
            "name": "worker",
            "image": "daisenthal/multi-worker",
            "hostname": "worker",
            "essential": false
        },

        {
            "name": "nginx",
            "image": "daisenthal/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }

            ],
            "links": ["client","server"]

        }



    ]




}